{

  "manifest_version": 2,
  "name": "Skribbl",
  "version": "1.0",

  "description": "zone",
  "homepage_url": "https://gay",
  "icons": {
    "48": "cons/icon.ico"
  },

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "background": {
    "scripts": ["background/background.js"]
  },

  "browser_action": {
    "default_icon": "icons/icon.ico",
    "default_title": "Skribbl",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.skribbl.io/*"],
      "js": ["content_scripts/entries_history.js"]
    }
  ]
}
